
<MainScreen>:
    CameraPreview:
        id: camera_preview
        size: root.size

    Timer:
        class2run: camera_preview
        pos_hint: {'x':0}
        size_hint: 0.2,0.5

    MySlider:
        class2bias: camera_preview
        id: mySlider1
        role_text: "bias_foot_z"
        min: -0.5
        max: 0
        step: 0.01
        pos_hint: {'right':1}
        size_hint: 0.2,1

<Timer>:
    orientation: 'vertical'
    Label:
        id: label1
        text: root.text

    Button:
        id: button1
        text: "set_origin"
        on_press: root.on_command()

<MySlider>:
    Label:
        id: role_label
        text: root.role_text
        font_size: 18

    Label:
        id: num_label
        text: root.num_text
        font_size: 18

    Slider:
        id: slider1
        step: root.step
        min: root.min
        max: root.max
        value: root.value
        on_touch_up: root.up_slider()
        on_touch_move: root.on_slider()